<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".family" android:background="@drawable/bg">

    <ImageView android:layout_width="130dp"
               android:layout_height="130dp"
               android:src="@drawable/father"
               android:id="@+id/father"
               android:onClick="startFather"
               tools:ignore="MissingConstraints"
               android:background="?attr/selectableItemBackground"
               android:focusable="true"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="232dp" app:layout_constraintHorizontal_bias="0.249">

    </ImageView>
    <ImageView android:layout_width="130dp"
               android:layout_height="130dp"
               android:src="@drawable/mother"
               android:onClick="startMother"
               android:background="?attr/selectableItemBackground"
               android:focusable="true"
               android:id="@+id/mother" tools:ignore="MissingConstraints"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.793" android:layout_marginBottom="528dp"/>
    <ImageView android:layout_width="130dp"
               android:layout_height="130dp"
               android:src="@drawable/grand_father"
               android:id="@+id/grandFather"
               android:onClick="startGrandFather"
               android:background="?attr/selectableItemBackground"
               android:focusable="true"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHorizontal_bias="0.249" android:layout_marginBottom="364dp"/>
    <ImageView android:layout_width="130dp"
               android:layout_height="130dp"
               android:src="@drawable/grand_mother"
               android:id="@+id/grandMother"
               android:onClick="startGrandMother"
               android:background="?attr/selectableItemBackground"
               android:focusable="true"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHorizontal_bias="0.793" android:layout_marginBottom="364dp"/>
    <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="612dp"
            app:layout_constraintHorizontal_bias="0.47"

            android:backgroundTint="@color/design_default_color_error"/>
</androidx.constraintlayout.widget.ConstraintLayout>
